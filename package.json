    "axios": "^0.21.0",
    "bech32": "^1.1.4",
    "bip32": "^2.0.6",
    "bip39": "^3.0.2",
    "bitcoinjs-lib": "^5.2.0",
    "crypto": "^1.0.1",
    "ledger-cosmos-js": "^2.1.8",
    "secp256k1": "^4.0.2"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true
